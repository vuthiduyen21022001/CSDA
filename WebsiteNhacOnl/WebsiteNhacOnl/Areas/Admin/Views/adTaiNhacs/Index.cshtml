@model IEnumerable<WebsiteNhacOnl.Models.TaiNhac>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<br />
<h2 style="color:blue;text-align:center;font-size:32px">DANH SÁCH TẢI NHẠC</h2>
@Html.Raw(@Html.ActionLink("[replacetext]", "Create").ToHtmlString().Replace("[replacetext]", " <img src=\"/Content/images/imgweb/them.png\" height=\"40\"> "))
<a class="btn btn-success" href="@Url.Action("adreport")">Xuất(.pdf)</a>
<table class="table" style="border: 1px solid #A9A9A9; border-radius: 4px; text-align: center">
    <tr>
        <th style="border: 1px solid #A9A9A9">
            Tên Nhạc
        </th>
        <th style="border: 1px solid #A9A9A9">
            File
        </th>
        <th style="border: 1px solid #A9A9A9">
            Size (KB)
        </th>
        <th style="border: 1px solid #A9A9A9">
            Type
        </th>
        <th>
            Thao tác
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="border: 1px solid #A9A9A9">
                @Html.DisplayFor(modelItem => item.TenNhac)
            </td>
            <td style="border: 1px solid #A9A9A9">
                @Html.DisplayFor(modelItem => item.File)
            </td>
            <td style="border: 1px solid #A9A9A9">
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td style="border: 1px solid #A9A9A9">
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td style="border: 1px solid #A9A9A9">
                @Html.Raw(@Html.ActionLink("[replacetext]", "Edit", new { id = item.Id }).ToHtmlString().Replace("[replacetext]", " <img src=\"/Content/images/imgweb/edit.png\" height=\"25\">"))
                @Html.Raw(@Html.ActionLink("[replacetext]", "Details", new { id = item.Id }).ToHtmlString().Replace("[replacetext]", " <img src=\"/Content/images/imgweb/details.png\" height=\"25\">"))
                @Html.Raw(@Html.ActionLink("[replacetext]", "Delete", new { id = item.Id }).ToHtmlString().Replace("[replacetext]", " <img src=\"/Content/images/imgweb/delete.png\" height=\"25\">"))
                @Html.Raw(@Html.ActionLink("[replacetext]", "Download", new { fileName = item.File }).ToHtmlString().Replace("[replacetext]", " <img src=\"/Content/images/imgweb/TaiVe.png\" height=\"25\">"))

            </td>
        </tr>
    }

</table>


<style>
    .create {
        background-color: #4CAF50;
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    }

        .create:hover {
            background-color: wheat;
        }
</style>

