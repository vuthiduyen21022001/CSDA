@model WebsiteNhacOnl.Models.TaiNhac

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<br />
<h2 style="margin-left:160px;">Xoá tải nhạc</h2>

<hr />
<div>


    <dl class="dl-horizontal" style="margin-left:250px;">
        <dt>
            Tên Nhạc
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenNhac)
        </dd>

        <dt>
            File
        </dt>

        <dd>
            @Html.DisplayFor(model => model.File)
        </dd>

        <dt>
            Size
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Size)
        </dd>

        <dt>
            Type
        </dt>

        <dd>
