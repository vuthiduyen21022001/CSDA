@model WebsiteNhacOnl.Models.BaiHat

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<br />

<h2 style="margin-left:160px;">Sửa bài hát</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()





    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <div style="margin-left:250px;">


        <dl class="dl-horizontal">

            <dt>
                Tên bài hát
            </dt>

            <dd>
                @Html.EditorFor(model => model.TenBH, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenBH, "", new { @class = "text-danger" })
            </dd>

            <dt>
                Ca sĩ
            </dt>

            <dd>
                @Html.EditorFor(model => model.CaSi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CaSi, "", new { @class = "text-danger" })
            </dd>

            <dt>
                Tác giả
            </dt>

            <dd>
                @Html.EditorFor(model => model.TacGia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TacGia, "", new { @class = "text-danger" })
            </dd>

            <dt>
                Ngày cập nhật
            </dt>

            <dd>

                @Html.TextBoxFor(model => model.NgayCapNhat, new { @type = "date", @class = "form-control datepicker" })
                @Html.ValidationMessageFor(model => model.NgayCapNhat, "", new { @class = "text-danger" })
            </dd>

            <dt>
                Hình ảnh bài hát
            </dt>

            <dd>
                @Html.EditorFor(model => model.HinhAnhBH, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HinhAnhBH, "", new { @class = "text-danger" })
            </dd>
            <dt>
                Lời bài hát
            </dt>

            <dd>
                @Html.TextAreaFor(model => model.LoiBH, new { htmlAttributes = new { @class = "form-control" }, cols = "60", rows = "15" })
                @Html.ValidationMessageFor(model => model.LoiBH, "", new { @class = "text-danger" })

            </dd>
            <dt>
                Link bài hát
            </dt>

            <dd>
                @Html.EditorFor(model => model.UrlBH, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UrlBH, "", new { @class = "text-danger" })

            </dd>
            <dt>
                Mã thể loại
            </dt>
            <dd>
                @Html.DropDownList("MaTL", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaTL, "", new { @class = "text-danger" })
            </dd>

        </dl>

    </div>
    <div class="form-group" style="margin-left:250px">
        <div class="col-md-offset-2 col-md-10">

            <p class="create" style="color:black;font-size:24px; font-weight:400">
                <input type="submit" value="Lưu" class="btn btn-default" />

            </p>

        </div>
    </div>

}
<hr />
<div style="margin-left:170px">
    @Html.ActionLink("Trở lại", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<style>
    .create {
        background-color: #4CAF50;
        border: none;
        color: white;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    }

        .create:hover {
            background-color: wheat;
        }
</style>

