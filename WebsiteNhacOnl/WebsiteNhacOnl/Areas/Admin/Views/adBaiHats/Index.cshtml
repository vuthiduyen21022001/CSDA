@model IEnumerable<WebsiteNhacOnl.Models.BaiHat>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<br />
<h1 style="color:blue;text-align:center;font-size:32px">THÊM BÀI HÁT</h1>
<div>
    @Html.Raw(@Html.ActionLink("[replacetext]", "Create").ToHtmlString().Replace("[replacetext]", " <img src=\"/Content/images/imgweb/them.png\" height=\"40\">"))
    <a class="btn btn-success" href="@Url.Action("adreport")">Xuất(.pdf)</a>
</div>
<br />
@using (Html.BeginForm())
{
    <form>
        Tìm kiếm: @Html.TextBox("SearchString")
        <button> <img src="~/Content/images/imgweb/search_icon.png" height="20" width="20" /> </button>
    </form>
}
<br />
<table class="table" style="border: 1px solid #A9A9A9; border-radius: 4px; text-align: center">
    <!--  <tr>
          <th>
              @Html.ActionLink("Sắp xếp theo tên", "Index", new { sortOrder = ViewBag.NameSortParm })
          </th>

      </tr>-->
    <tr>
        <th style="border: 1px solid #A9A9A9">
            Tên thể loại
        </th>
        <th style="border: 1px solid #A9A9A9">
            Tên bài hát
        </th>
        <th style="border: 1px solid #A9A9A9">
            Ca sĩ
        </th>
        <th style="border: 1px solid #A9A9A9">
            Tác giả
        </th>
        <th style="border: 1px solid #A9A9A9">
            Ngày cập nhật
        </th>
        <th style="border: 1px solid #A9A9A9">
            Hình ảnh bài hát
        </th>
        <th style="border: 1px solid #A9A9A9">
            Link bài hát
        </th>
        <th style="border: 1px solid #A9A9A9"> Thao tác </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="border: 1px solid #A9A9A9">
                @Html.DisplayFor(modelItem => item.TheLoai.TenTL)
            </td>
            <td style="border: 1px solid #A9A9A9">
                @Html.DisplayFor(modelItem => item.TenBH)
            </td>
            <td style="border: 1px solid #A9A9A9">
                @Html.DisplayFor(modelItem => item.CaSi)
            </td>
            <td style="border: 1px solid #A9A9A9">
                @Html.DisplayFor(modelItem => item.TacGia)
            </td>
            <td style="border: 1px solid #A9A9A9">
                @Html.DisplayFor(modelItem => item.NgayCapNhat)
            </td>
            <td style="border: 1px solid #A9A9A9">
                <img src="@item.HinhAnhBH" style="height:45px" />
                @*<img src=" @Html.DisplayFor(modelItem => item.HinhAnhBH)" />*@
            </td>
            <td style="border: 1px solid #A9A9A9">
                @Html.DisplayFor(modelItem => item.UrlBH)
            </td>
            <td style="border: 1px solid #A9A9A9">
                @Html.Raw(@Html.ActionLink("[replacetext]", "Edit", new { id = item.Id }).ToHtmlString().Replace("[replacetext]", " <img src=\"/Content/images/imgweb/edit.png\" height=\"25\">"))
                @Html.Raw(@Html.ActionLink("[replacetext]", "Details", new { id = item.Id }).ToHtmlString().Replace("[replacetext]", " <img src=\"/Content/images/imgweb/details.png\" height=\"25\">"))
                @Html.Raw(@Html.ActionLink("[replacetext]", "Delete", new { id = item.Id }).ToHtmlString().Replace("[replacetext]", " <img src=\"/Content/images/imgweb/delete.png\" height=\"25\">"))
                @Html.Raw(@Html.ActionLink("[replacetext]", "Download", new { fileName = item.UrlBH }).ToHtmlString().Replace("[replacetext]", " <img src=\"/Content/images/imgweb/TaiVe.png\" height=\"25\">"))
            </td>
        </tr>
    }

</table>


