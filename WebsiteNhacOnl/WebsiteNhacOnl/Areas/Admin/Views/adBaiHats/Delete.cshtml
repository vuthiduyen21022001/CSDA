@model WebsiteNhacOnl.Models.BaiHat

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<br />

<h2 style="margin-left:160px">Xóa bài hát</h2>
<hr />
<div style="margin-left:250px">



    <dl>
        <dt>
            Tên bài hát
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenBH)
        </dd>

        <dt>
            Ca sĩ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CaSi)
        </dd>

        <dt>
            Tác giả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TacGia)
        </dd>

        <dt>
            Ngày cập nhật
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayCapNhat)
        </dd>

        <dt>
            Hình ảnh bài hát
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HinhAnhBH)
        </dd>

        <dt>
            Link bài hát
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UrlBH)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                <p class="create" style="color:black;font-size:24px; font-weight:400">
                    <input type="submit" value="Xóa" class="btn btn-default" />

                </p>

            </div>
        </div>



    }
</div>
<hr />
<div style="margin-left:170px">
    @Html.ActionLink("Trở lại", "Index")
</div>
<style>
    .create {
        background-color: #4CAF50;
        border: none;
        color: white;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    }

        .create:hover {
            background-color: wheat;
        }
</style>