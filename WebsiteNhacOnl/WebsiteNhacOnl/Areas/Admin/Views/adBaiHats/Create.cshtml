@model WebsiteNhacOnl.Models.BaiHat

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<br />
<h2 style="margin-left:160px;">Thêm mới</h2>
<hr />
<h1> @ViewBag.msg</h1>

@using (Html.BeginForm("Create", "adBaiHats", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" style="margin-left:100px">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group" style="margin-left:160px;">
        <dl>
            <dt>
                Tên bài hát
            </dt>
        </dl>

        <div class="col-md-10">
            @Html.EditorFor(model => model.TenBH, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenBH, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="margin-left:160px;">
        <dl>
            <dt>
                Ca sĩ
            </dt>
        </dl>
        <div class="col-md-10">
            @Html.EditorFor(model => model.CaSi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CaSi, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="margin-left:160px;">
        <dl>
            <dt>
                Tác giả
            </dt>
        </dl>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TacGia, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TacGia, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="margin-left:160px;">
        <dl>
            <dt>
                Ngày cập nhật
            </dt>
        </dl>
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.NgayCapNhat, new { @type = "date", @class = "form-control datepicker", DataFormatString = "{0:yyyy-MM-dd}" })
            @Html.ValidationMessageFor(model => model.NgayCapNhat, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="margin-left:160px;">
        <dl>
            <dt>
                Hình ảnh bài hát
            </dt>
        </dl>

        <div class="col-md-10">
            <input type="file" name="img" id="img" accept=".jpg,.png,.gif,.jpeg,.bmp" />
            @Html.ValidationMessageFor(model => model.HinhAnhBH, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group" style="margin-left:160px;">
        <dl>
            <dt>
                Lời bài hát
            </dt>
        </dl>
        <div class="col-md-10">
           
            @Html.TextAreaFor(model => model.LoiBH, new { htmlAttributes = new { @class = "form-control" }, cols = "60", rows = "15" })
            @Html.ValidationMessageFor(model => model.LoiBH, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group" style="margin-left:160px;">
        <dl>
            <dt>
                Link bài hát
            </dt>
        </dl>

        <div class="col-md-10">

            <input type="file" name="url" id="url" accept=".mp3" />
            @Html.ValidationMessageFor(model => model.UrlBH, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="margin-left:160px;">
        <dl>
            <dt>
                Mã thể loại
            </dt>
        </dl>

        <div class="col-md-10">
            @Html.DropDownList("MaTL", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MaTL, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />

    <div class="form-group" style="margin-left:160px">
        <div class="col-md-offset-2 col-md-10">

            <p class="create" style="color:black;font-size:24px; font-weight:400">
                <input type="submit" value="Thêm mới" class="btn btn-default" />

            </p>

        </div>
    </div>
</div>
}
<hr />
<div style="margin-left:160px">
    @Html.ActionLink("Trở lại", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<style>
    .create {
        background-color: #4CAF50;
        border: none;
        color: white;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    }

        .create:hover {
            background-color: wheat;
        }
</style>